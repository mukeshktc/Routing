<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="kmn.rt.controller.View1"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page title="{i18n>XTIT_V1}">
				<content>
					<SearchField search="onSearch" liveChange="onSearch"/>
					<List id="myList" items="{/fruits}" mode="SingleSelectMaster" selectionChange="onPress">
						<ObjectListItem intro="{benefit}" title="{name}" number="{price}" numberUnit="{unit}" icon="{photo}"/>
					</List>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
					</Toolbar>
				</footer>
			</Page>
</mvc:View>